#!/bin/zsh
set -e
cd "${0:A:h}"
local BUFFER=""
local mode=1
DICTFILE="$(dirname $0)/../dicts/mozc.out.txt"
while true; do
	read -r -s -k 1 c
	if [ "$c" = "." ]; then
		echo -ne $BUFFER | xsel -i -b
		exit
	elif [ "$c" = "," ]; then
		BUFFER=${BUFFER%?}
	elif [ "$c" = "" ] || [ "$c" = "" ]; then
		exit
	elif [ "$c" = "0" ]; then
		read -r rawstr
		BUFFER+="$rawstr"
	elif [ "$c" = "1" ]; then
		DICTFILE="$(dirname $0)/../dicts/mozc.out.txt"
		mode=1
	elif [ "$c" = "2" ]; then
		DICTFILE="$(dirname $0)/../dicts/sunpinyin.out.txt"
		mode=2
	elif [ "$c" = "3" ]; then
		tmp=`find /usr/share/unicode -type f -exec cat {} \+ | fzf`
		BUFFER+="$(echo -e '\u'"${tmp:0:4}")"
		mode=3
	else
		BUFFER+="$(cat "$DICTFILE" | \
			fzf --algo=v1 --query=$c | \
			cut -d' ' -f2 )"
	fi
	echo "buf: $BUFFER, mode: $mode"
done
